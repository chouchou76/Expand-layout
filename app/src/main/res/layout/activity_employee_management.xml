    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:onClick="open_employee_healthcare_activity"
                    android:id="@+id/imgEmployeeHealthcare"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/ic_employee_healthcare" />

                <TextView
                    android:id="@+id/txtEmployeeHealthcare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EFCFCF"
                    android:text="@string/title_healthcare"
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgEmployeeSalary"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/ic_employee_salary" />

                <TextView
                    android:id="@+id/txtEmployeeSalary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EFCFCF"
                    android:text="@string/title_salary"
                    android:textAlignment="center"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableRow
            android:layout_width="match_parent"
